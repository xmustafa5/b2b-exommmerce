{
  // Visit https://aka.ms/tsconfig to read more about this file
  "include": ["src/**/*"],
  "exclude": ["node_modules", "prisma/**/*", "dist", "src/**/*.test.ts", "src/**/__tests__/**", "src/test/**"],
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    // "noUncheckedIndexedAccess": true, // Disabled - causes too many false positives
    // "exactOptionalPropertyTypes": true, // Disabled - causes issues with Prisma types

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": false, // Temporarily disabled due to legacy code issues
    "jsx": "react-jsx",
    // "verbatimModuleSyntax": true, // Disabled for CommonJS compatibility
    "isolatedModules": true,
    // "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  }
}
